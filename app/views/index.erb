<html>
  <head>
    <meta charset="utf-8">
    <title>All Tasks</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container">
      <h1>All Tasks</h1>
      <% @tasks.each do |task| %>
        <div class="panel panel-default">
            <div class="panel-heading">
              <h3><a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
            </div>
            <div class="panel-body">
                <div class="row">
                  <div class="col-md-6">
                    <p><%= task.description %></p>
                  </div>
                  <div class="col-md-6">
                    <div class="btn-group pull-right" role="group">
                      <a class="btn btn-default" href="/tasks/<%= task.id %>/edit">Edit</a>
                      <form class="pull-right" action="/tasks/ <%= task.id %>" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-default">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
            </div>
        </div>
      <% end %>
      <div class="btn-group pull-right" role="group">
        <a class="btn btn-default" href="/">Back to Dashboard</a>
        <a class="btn btn-default" href="/tasks/new">New Task</a>
      </div>
    </div>
  </body>
</html>
